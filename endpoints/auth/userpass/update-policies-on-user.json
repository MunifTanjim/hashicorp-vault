{
  "method": "post",
  "summary": "Update password for an existing user.",
  "path": "/auth/userpass/users/:username/policies",
  "parameters": [
    {
      "name": "username",
      "type": "string",
      "required": true,
      "description": "The username for the user."
    },
    {
      "name": "policies",
      "type": "string",
      "required": false,
      "description": "Comma-separated list of policies."
    }
  ]
}
